{
  "name": "ajis",
  "version": "1.0.0",
  "description": "Malaysian freelance marketplace web application",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "test": "npm run test --workspaces"
  },
  "keywords": ["freelance", "marketplace", "malaysia", "fiverr"],
  "author": "Azahar Yafif",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
